<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item> <!-- ActionBar -->
        <item name="colorPrimaryVariant">@color/purple_700</item> <!-- Tool bar -->
        <item name="colorOnPrimary">@color/white</item> <!-- Background -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item> <!-- Form -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item> <!-- Text -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Toolbar -->
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item> <!-- ActionBar -->
        <item name="colorPrimaryVariant">@color/purple_700</item> <!-- Tool bar -->
        <item name="colorOnPrimary">@color/black</item> <!-- Background -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF5722</item> <!-- Form -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Text -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Toolbar -->
        <!-- Customize your theme here. -->
    </style>
</resources>